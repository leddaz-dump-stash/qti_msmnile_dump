<filter-conf>
    <version>2019052215</version>
    <isOpen>1</isOpen>
    <filter-name>sys_high_temp_protect</filter-name>
    <HighTemperatureProtectSwitch>true</HighTemperatureProtectSwitch> 
    <HighTemperatureShutdownSwitch>true</HighTemperatureShutdownSwitch>
    <HighTemperatureFirstStepSwitch>true</HighTemperatureFirstStepSwitch>
    <CountBatteryChangedForFosUpdateTime>30</CountBatteryChangedForFosUpdateTime> 
    <HighTemperatureShutdownUpdateTime>15</HighTemperatureShutdownUpdateTime>
    <HighTemperatureProtectFirstStepIn>465</HighTemperatureProtectFirstStepIn>
    <HighTemperatureProtectFirstStepOut>445</HighTemperatureProtectFirstStepOut>
    <HighTemperatureProtectThresholdIn>490</HighTemperatureProtectThresholdIn>
    <HighTemperatureProtectThresholdOut>470</HighTemperatureProtectThresholdOut>
    <HighTemperatureProtectShutDown>750</HighTemperatureProtectShutDown>
    <MediumTemperatureProtectThreshold>10000</MediumTemperatureProtectThreshold>
	
	<!-- 普通场景禁用闪光灯温度阈值 -->
	<HighTemperatureDisableFlashLimit>430</HighTemperatureDisableFlashLimit>
	<!-- 充电或打开热点场景，禁用闪光灯温度阈值 -->
	<HighTemperatureDisableFlashChargeLimit>430</HighTemperatureDisableFlashChargeLimit>
	<!-- 4k@60fps场景下，打开高温强制停止录像功能：true/false -->
	<HighTemperatureControlVideoRecordSwitch>true</HighTemperatureControlVideoRecordSwitch>
	<!-- 4k@60fps场景下，高温强制停止录像触发阈值 -->
	<HighTemperatureDisableVideoRecordLimit>450</HighTemperatureDisableVideoRecordLimit>
	<!-- 4k@60fps场景下，高温强制停止录像恢复阈值 -->
	<HighTemperatureEnableVideoRecordLimit>430</HighTemperatureEnableVideoRecordLimit>
</filter-conf>
